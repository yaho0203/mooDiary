server:
  port: 8080
  servlet:
    context-path: /api

spring:
  application:
    name: mooDiary
  
  datasource:
    url: jdbc:mysql://localhost:3306/mooDiary?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
    username: root
    password: your-mysql-password
    driver-class-name: com.mysql.cj.jdbc.Driver
  
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        format_sql: true
        dialect: org.hibernate.dialect.MySQLDialect
  
  security:
    user:
      name: admin
      password: admin

# JWT 설정
jwt:
  secret: your-secret-key-here-make-it-long-and-secure
  expiration: 86400000 # 24시간

# OpenAI 설정
openai:
  api:
    key: your-openai-api-key-here
    url: https://api.openai.com/v1/chat/completions
  model: gpt-4o-mini-2024-07-18
  max-tokens: 1000
  temperature: 0.7

# 파일 업로드 설정
file:
  upload-dir: ./uploads/
  allowed-types: jpg,jpeg,png,gif
  max-size: 5242880 # 5MB

# Redis 설정
spring:
  data:
    redis:
      host: localhost
      port: 6379
      timeout: 2000ms
      lettuce:
        pool:
          max-active: 8
          max-idle: 8
          min-idle: 0

# Swagger 설정
springdoc:
  api-docs:
    path: /api-docs
  swagger-ui:
    path: /swagger-ui.html
    tags-sorter: alpha
    operations-sorter: alpha

# 로깅 설정
logging:
  level:
    com.moodiary: DEBUG
    org.springframework.security: DEBUG
  pattern:
    console: "%d{yyyy-MM-dd HH:mm:ss} - %msg%n"
